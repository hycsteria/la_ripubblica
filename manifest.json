{
  "manifest_version": 2,

  "name": "La RIpubblica",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "2.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "permissions": [
    "debugger",
    "activeTab",
    "tabs",
    "alarms",
    "clipboardWrite",
    "notifications",
    "background",
    "storage",
    "cookies",
    "https://*/",
    "http://*/"
  ],

  "web_accessible_resources": [
      "images/*.png"
    ]
}

